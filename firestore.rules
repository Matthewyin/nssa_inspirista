rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Notes collection rules
    match /notes/{noteId} {
      // Allow users to read, write, update, and delete their own notes
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      // Allow users to create notes with their own uid
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    // Tasks collection rules
    match /tasks/{taskId} {
      // Allow users to read, write, update, and delete their own tasks
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow users to create tasks with their own userId
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Task templates collection rules (for AI-generated templates)
    match /task_templates/{templateId} {
      // Allow all authenticated users to read templates
      allow read: if request.auth != null;
      // Only allow system/admin to create templates (for now, we'll allow any authenticated user)
      allow create: if request.auth != null;
    }

    // User preferences collection rules
    match /user_preferences/{userId} {
      // Allow users to read and write their own preferences
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow users to create their own preferences
      allow create: if request.auth != null && request.auth.uid == request.resource.id;
    }

    // Webhook reminders collection rules
    match /webhook_reminders/{reminderId} {
      // Allow users to read, write, update, and delete their own reminders
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow users to create reminders with their own userId
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Reminder execution logs collection rules
    match /reminder_execution_logs/{logId} {
      // Allow users to read their own reminder execution logs
      allow read: if request.auth != null;
      // Allow system to create execution logs
      allow create: if true;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
